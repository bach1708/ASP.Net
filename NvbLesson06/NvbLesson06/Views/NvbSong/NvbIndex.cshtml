@model IEnumerable<NvbLesson06.Models.NvbSong>

@{
    ViewBag.Title = "Nvb: Danh sách bài hát";
}

<h2>Nvb: Danh sách bài hát</h2>

<p>
    @Html.ActionLink("Create New", "NvbCreate")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NvbTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvbAuthor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvbArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NvbYearRelease)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NvbTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NvbAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NvbArtist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NvbYearRelease)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
